= form_for @ingredient do |f|
  - if @ingredient.errors.any?
    #error_explanation
      %h2= "#{pluralize(@ingredient.errors.count, "error")} prohibited this ingredient from being saved:"
      %ul
        - @ingredient.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :food_type
    = f.select 'food_type_id', FoodType.all.collect { |f| [f.name,f.id] }
  .field
    = f.label :pic
    = f.text_field :pic
  .actions
    = f.submit 'Save'
