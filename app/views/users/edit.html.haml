%h2 Edit Account
%br
= form_for @user do |f|
  = f.label :fullname
  = f.text_field :fullname
  
  = f.label :name
  = f.text_field :name

  = f.label :email
  = f.text_field :email

  %label{for: 'current_password'} Current Password
  %input{type:'text', name:'current_passward'}
  = f.label :password
  = f.text_field :password

  = f.label :password_confirmation
  = f.text_field :password_confirmation
  %br
  = f.submit class: 'btn'
